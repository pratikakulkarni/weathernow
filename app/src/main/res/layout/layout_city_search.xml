<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_margin="5dp"
                                             android:layout_width="match_parent"
                                             android:background="@color/trans"
                                             android:layout_height="wrap_content" android:id="@+id/item_parent">
    <TextView
            android:text="City"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView_CityInfo"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/imageView2"
            android:textSize="18sp" android:textStyle="bold" android:textColor="@color/white"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_chevron_right"
            android:id="@+id/imageView2"
            android:tint="@color/white"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_high_temperature"
            android:tint="@color/white"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="11dp" app:layout_constraintTop_toBottomOf="@+id/textView_CityInfo"
            app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView_maxTemp" android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_low_temperature"
            android:id="@+id/imageView4"
            android:tint="@color/white"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_CityInfo"
            app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/textView_maxTemp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/textView_minTemp"
            android:layout_marginEnd="12dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_temperature"
            android:id="@+id/imageView5"
            android:tint="@color/white"
            app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_CityInfo"
            app:layout_constraintStart_toEndOf="@+id/textView_minTemp" android:layout_marginStart="7dp"
            app:layout_constraintEnd_toStartOf="@+id/textView_Temp" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_maxTemp"
            android:layout_marginTop="11dp" app:layout_constraintTop_toBottomOf="@+id/textView_CityInfo"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintEnd_toStartOf="@+id/imageView4" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textColor="@color/white"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_minTemp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_CityInfo"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            android:layout_marginEnd="7dp" app:layout_constraintEnd_toStartOf="@+id/imageView5"
            app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textColor="@color/white"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Temp" app:layout_constraintStart_toEndOf="@+id/imageView5"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_CityInfo"
            app:layout_constraintEnd_toStartOf="@+id/imageView2" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textColor="@color/white"/>
</android.support.constraint.ConstraintLayout>