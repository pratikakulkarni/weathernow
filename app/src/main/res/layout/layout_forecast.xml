<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:background="@color/trans"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="@dimen/widget_margin">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_Time"
                    android:gravity="start|center_vertical"
                    android:textSize="18sp"
                    android:text="Forecast Time"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/white"/>
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="@color/white"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_Temp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_temperature"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/white"
                    android:textSize="20sp"
                    android:text="Temperature"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/white"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_maxTemp"
                        android:text="min"
                        android:drawableLeft="@drawable/ic_low_temperature"
                        android:drawableTint="@color/white"
                        android:drawablePadding="5dp"
                        android:textColor="@color/white"/>

                <TextView
                        android:text="/"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_margin="4dp"
                        android:textColor="@color/white"/>

                <TextView
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:text="max"
                        android:drawableLeft="@drawable/ic_high_temperature"
                        android:drawableTint="@color/white"
                        android:drawablePadding="5dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:id="@+id/textView_minTemp"/>
            </LinearLayout>
        </LinearLayout>


        <TextView
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:id="@+id/textView_WindSpeed"
                android:text="Wind Speed"
                android:drawableLeft="@drawable/ic_wind"
                android:drawableTint="@color/white"
                android:drawablePadding="5dp"
                android:textColor="@color/white"/>

        <TextView
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:id="@+id/textView_Humidity"
                android:text="Humidity"
                android:drawableTint="@color/white"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_humidity"
                android:textColor="@color/white"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:text="Weather"
                    android:id="@+id/textView_Weather"
                    android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>